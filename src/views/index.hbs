<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather App</title>
</head>
<body>
    <div class="searchbox">
        <input type="search" id="s1" placeholder="Enter your city" onchange="OpenPage()">
    </div>
    <script>
        const OpenPage=()=>{
            let x=document.getElementById("s1").value;
            window.open("/weather/?name="+x,"_self");
        }
    </script>
</body>
</html>